{
  "private": true,
  "license": "MIT",
  "repository": "kisenka/svg-baker",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.9.6",
    "coveralls": "^2.13.1",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^3.8.1",
    "eslint-config-airbnb-base": "^9.0.0",
    "eslint-plugin-bdd": "2.1.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.3",
    "istanbul": "0.4.5",
    "lerna": "^2.0.0-rc.4",
    "lerna-semantic-release": "^9.1.0",
    "mocha": "3.2.0",
    "posthtml-svg-mode": "1.0.0",
    "validate-commit-msg": "^2.12.1"
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "lerna": "lerna",
    "postinstall": "lerna bootstrap",
    "release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
    "release:dry-run": "lerna-semantic-release pre && lerna-semantic-release post",
    "test": "mocha \"packages/!(svg-baker-runtime)/test/**/*.test.js\"",
    "test:coverage": "istanbul cover --report html --report lcov _mocha \"packages/!(svg-baker-runtime)/test/**/*.test.js\"",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls"
  }
}
