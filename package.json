{
  "description": "This is root of svg-baker monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/preset-flow": "^7.0.0-beta.44",
    "@commitlint/config-conventional": "6.1.3",
    "@commitlint/core": "6.1.3",
    "@jetbrains/logos": "^1.0.0",
    "@kisenka/eslint-config": "^1.0.2",
    "@types/jest": "^22.2.2",
    "babel-eslint": "^8.2.2",
    "babylon": "^6.18.0",
    "babylon-walk": "^1.0.2",
    "chai": "4.1.2",
    "doctrine": "^2.1.0",
    "eslint": "4.19.1",
    "eslint-plugin-flowtype": "^2.46.1",
    "flow-bin": "^0.69.0",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "jest": "^22.4.3",
    "jest-extended": "^0.6.0",
    "jsdoctypeparser": "^2.0.0-alpha-8",
    "lerna": "2.9.0",
    "mocha": "5.0.5",
    "nyc": "11.6.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "commitmsg": "node scripts/lint-commit-msg",
    "lint": "eslint packages scripts test",
    "publish": "lerna publish --conventional-commits --npm-client=npm",
    "publish:dry-run": "yarn run publish --skip-git --skip-npm",
    "test": "MOCHA_SETUP_PATH=$(pwd)/test/mocha-setup lerna run test"
